{
  "name": "maiara",
  "version": "0.0.0",
  "description": "Chatbots made easy",
  "author": "Adrián Bueno Jiménez <adrian.buenoj@gmail.com> (adrian-bueno.github.io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrian-bueno/maiara.git"
  },
  "homepage": "https://github.com/adrian-bueno/maiara#readme",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "list-node-packages": "lerna ls",
    "build": "lerna run build",
    "build:nodejs-assistant": "lerna run --scope @maiara/nodejs-assistant build",
    "build:editor-web-app": "lerna run --scope @maiara/editor-web-app build",
    "build:prod:editor-web-app": "lerna run --scope @maiara/editor-web-app build:prod",
    "build:editor-service": "lerna run --scope @maiara/editor-service build",
    "build:package:core": "lerna run --scope @maiara/core build",
    "build:package:telegram": "lerna run --scope @maiara/telegram build",
    "build:package:facebook-messenger": "lerna run --scope @maiara/facebook-messenger build",
    "build:test": "lerna run build:test",
    "clean:node_modules": "lerna clean",
    "clean:devDependencies": "lerna exec -- npm prune --production && npm prune --production",
    "clean:build": "lerna exec -- rimraf dist",
    "clean:test": "lerna exec -- rimraf test-build",
    "clean:all": "npm run clean:node_modules && npm run clean:build && npm run clean:test",
    "start:nodejs-assistant": "lerna run --scope @maiara/nodejs-assistant start --stream",
    "start:editor-web-app": "lerna run --scope @maiara/editor-web-app start --stream",
    "start:editor-service": "lerna run --scope @maiara/editor-service start --stream",
    "test:core": "lerna run --scope @maiara/core test",
    "test:telegram": "lerna run --scope @maiara/telegram test:telegram --stream",
    "test": "lerna run test",
    "docker:build:editor-service": "docker build -f Dockerfile.editor-service -t maiara/editor-service .",
    "docker:build:nodejs-assistant": "docker build -f Dockerfile.nodejs-assistant -t maiara/nodejs-assistant .",
    "docker:start:nodejs-assistant": "docker run -it -p 8080:8080 maiara/nodejs-assistant"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/dockerode": "^3.3.8",
    "@types/esprima": "^4.0.3",
    "@types/express": "^4.17.3",
    "@types/minio": "^7.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.28",
    "@types/node-telegram-bot-api": "^0.56.2",
    "chai": "^4.3.6",
    "concurrently": "^7.1.0",
    "lerna": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.3"
  }
}
