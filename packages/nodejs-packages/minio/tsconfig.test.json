{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": false,
        "declaration": false,
        "rootDir": "test",
        "outDir": "test-build"
    },
    "include": ["test"],
    "exclude": ["src"]
}
